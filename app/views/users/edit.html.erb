<h3>スケジュール編集</h3>

<%= form_for @user do |f| %>
  <table>
    <tr>
      <th><%= f.label :title,"タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>
    <tr>
      <th><%= f.label :start,"開始日" %></th>
      <td><%= f.date_field :start %></td>
    </tr>
    <tr>
      <th><%= f.label :end,"終了日" %></th>
      <td><%= f.date_field :end %></td>
    </tr>
    <tr>
      <th><%= f.label :note,"スケジュールメモ" %></th>
      <td><%= f.text_area :name %></td>
    </tr>
  </table>
  <ul>
    <li><%= f.submit "スケジュールの編集完了" %></li>
    <li><%= link_to "スケジュール一覧", :users %></li>
  </ul>
<% end %>
