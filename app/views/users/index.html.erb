<div class="main">
  <h3>スケジュール一覧</h3>

  <% if flash.notice %>
  <p class="notice"><%= flash.notice %></p>
  <% end %>

  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>タイトル</th>
        <th>開始日</th>
        <th>終了日</th>
        <th>スケジュール更新日時</th>
        <th>確認</th>
        <th>編集</th>
        <th>削除</th>
      </tr>
      <thead>
      <tbody>
        <%@users.each do |user|%>
          <tr>
            <td><%=user.id%></td>
            <td><%=user.title%></td>
            <td><%=user.start.strftime('%Y年%m月%d日')%></td>
            <td><%=user.end.strftime('%Y年%m月%d日')%></td>
            <td><%=user.updated_at.to_s(:datetime_jp)%></td>
            <td><%= link_to "確認" , user %></td>
            <td><%= link_to "編集" , [:edit,user] %></td>
            <td><%= link_to "削除", user, method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
          </tr>
          <%end%>
      </tbody>
    </table>
    <p><%= link_to "スケジュール新規登録", new_user_path %></p>
</div>

<footer>
  <h3>現在の日付 :<%= Date.current.strftime('%Y年%m月%d日') %></h3>
  <h3 class="schedule_total">スケジュール合計数 :<%= User.count %></h3>
</footer>
